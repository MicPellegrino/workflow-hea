units metal 
dimension 3 
boundary p p p
atom_style atomic
atom_modify map array

# Fraction of each atomic component
variable fW equal 0.5
variable fMo equal 0.5

# Lattice parameter for WMo after annealing [Ã…]
variable bccWMo equal 3.175

variable Lx equal 10*${bccWMo}
variable Ly equal 10*${bccWMo}
variable Lz equal 10*${bccWMo}
variable Ls equal 4*${bccWMo}

region system block -${Lx} ${Lx} -${Ly} ${Ly} -${Lz} ${Lz}
region slab block -${Lx} ${Lx} -${Ly} ${Ly} -${Ls} ${Ls}
create_box 2 system

### HERE SPECIFY CRYSTAL PLANE ORIENTATION! ###
# lattice bcc ${bccWMo} orient x 1 0 0 orient y 0 1 0 orient z 0 0 1
# lattice bcc ${bccWMo} orient x 0 0 1 orient y 1 1 0 orient z -1 1 0
lattice bcc ${bccWMo} orient x 1 -1 0 orient y 1 1 -2 orient z 1 1 1
create_atoms 1 region slab
lattice none 1.0
### --------------------------------------- ###

set type 1 type/fraction 2 ${fMo} 1234567

pair_style eam/fs 
pair_coeff * * ../../potential-files/eam/W-Mo.eam.fs W Mo
neighbor 2.0 bin
neigh_modify delay 0 every 1 check yes

write_data system_w_mo.data nocoeff

minimize 1.0e-4 1.0e-6 100 1000

write_data system_w_mo_min.data nocoeff
